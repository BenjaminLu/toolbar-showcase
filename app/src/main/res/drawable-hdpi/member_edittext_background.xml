<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#71db00"
                android:centerColor="#52bd1c"
                android:endColor="#2f9c3a"/>
        </shape>
    </item>
    <item android:left="5dp">
        <shape android:shape="rectangle">
            <padding
                android:left="10dp"
                android:right="10dp"
                />
            <solid android:color="#1e1f1a"/>
        </shape>
    </item>
</layer-list>